<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    android:gravity

    <ImageView
        android:id="@+id/hhh"
        android:layout_width="1165dp"
        android:layout_height="1288dp"
        android:background="#FFFFFF"
        android:src="@drawable/foell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/UserEntry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="45dp"
        android:paddingRight="0dp"
        android:paddingBottom="45dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-42dp">

        <TextView
            android:id="@+id/GameTitle"
            android:gravity="center"
            android:layout_width="358dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:autoText="false"
            android:background="#FFFFFF"
            android:text="Where's Geoff-Tho?"
            android:textColor="#BE0C0C"
            android:textColorHighlight="#F0FFFFFF"
            android:textIsSelectable="false"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GameDescription"
            android:layout_width="355dp"
            android:layout_height="115dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="105dp"
            android:layout_marginRight="50dp"
            android:autoText="false"
            android:background="#F8FFFFFF"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="Game Objective:\nYou have 30 seconds to find Geoff\nChoose unwisely and lose a life\nGood Luck!"
            android:textColor="#4CAF50"
            android:textIsSelectable="true"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/StartGame"
            android:background="#F8FFFFFF"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:text="Enter Game"
            android:textColor="#BE0C0C"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
